@{
    ViewBag.Title = "Leaderboard";
}

<script src="~/Scripts/knockout-3.4.0.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/KnockoutModels/Common.js"></script>


<div class="dropdown" id="games_select" >
    <button type="button" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
    <span>All games</span>
    <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu" data-bind="foreach: games" >
        <li role="presentation">
          <a role="menuitem" href="#">
            <span data-bind="text: Name"></span>
          </a>
        </li>
    </ul>
</div>

</br>

<div class="row">
        <div class="tabbable"  id="myTabs">
            <ul class="nav nav-tabs" data-bind="foreach: sections">
                <li data-bind="css: {active: $root.selected() == $data }" >
                <a href="#" data-bind="click : $root.toogleSelected($index), text: name">
                </a>
                </li>
            </ul>
            <div class="tab-content" data-bind="foreach: sections">
                <div class="tab-pane" data-bind="css: {active: $root.selected() == $data }">
                    <p data-bind="text: name"></p>
                 <table class="table table-striped table-bordered table-condensed">
                     <thead>
                         <tr>
                             <th>ID</th>
                             <th>Game</th>
                             <th>Gamer</th>
                             <th>Day</th>
                             <th>Score</th>
                         </tr>
                     </thead>
                     <tbody data-bind="foreach: scores">
                         <tr>
                             <td data-bind="text: Id"></td>
                             <td data-bind="text: Game"></td>
                             <td data-bind="text: GamerName"></td>
                             <td data-bind="text: Day"></td>
                             <td data-bind="text: Score"></td>
                         </tr>
                     </tbody>
                 </table>
            </div>
        </div>
</div>
    </div>
